<Window x:Class="ggeut.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ggeut"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000">
    <Grid>
        <StackPanel Orientation="Horizontal" Margin="30,0,0,0">
            <Image x:Name="DepthImage" Width="640" Height="480"/>
            <StackPanel Orientation="Vertical" VerticalAlignment="Center" Background="AliceBlue" Margin="30,0,0,0">
                <TextBlock x:Name="Text1" Text="Text1" FontSize="15"/>
                <TextBlock x:Name="Text2" Text="Text1" FontSize="15"/>
                <TextBlock x:Name="Text3" Text="Text1" FontSize="15"/>
                <TextBlock x:Name="Text4" Text="Text1" FontSize="15"/>
                <TextBlock x:Name="Text5" Text="Text1" FontSize="15"/>
                <TextBlock x:Name="Text6" Text="Text1" FontSize="30"/>
                <Button x:Name="Btn1" Click="Btn1_Click" Content="측정(정면)" FontSize="20" IsEnabled="False"/>
            </StackPanel>
        </StackPanel>
        <Grid x:Name="SkeletonImage" Height="480" Width="640" Background="Transparent" Margin="30,44.5,322,44.5"/>
    </Grid>
</Window>
